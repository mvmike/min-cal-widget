<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/month_year_label"
            android:layout_width="wrap_content"
            android:layout_height="26sp"
            android:gravity="start|top"
            android:textColor="@color/text_colour_full_dark"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/configuration_icon"
            android:layout_width="match_parent"
            android:layout_height="24sp"
            android:contentDescription="@string/configuration"
            android:gravity="end"
            android:padding="5dip"
            android:scaleType="fitEnd"
            android:src="@drawable/ic_configuration_dark" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/calendar_days_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="3dp"
        android:layout_weight="1"
        android:orientation="vertical" />

</LinearLayout>
